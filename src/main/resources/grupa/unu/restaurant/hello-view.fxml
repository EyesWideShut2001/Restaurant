<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="grupa.unu.restaurant.controller.RestaurantController"
      stylesheets="@styles.css">

    <VBox alignment="CENTER" styleClass="login-container">
        <Text text="Welcome to Our Restaurant" styleClass="title-text"/>
        <Text text="Please select how you would like to proceed:" styleClass="subtitle-text"/>

        <VBox alignment="CENTER" styleClass="button-container">
            <Button text="Continue as Customer" onAction="#handleCustomerClick" styleClass="primary-button"/>
            <Button text="Staff Login" onAction="#handleStaffClick" styleClass="staff-button"/>
            <Button text="Manager Login" onAction="#handleManagerClick" styleClass="secondary-button"/>
        </VBox>
    </VBox>
</VBox>
