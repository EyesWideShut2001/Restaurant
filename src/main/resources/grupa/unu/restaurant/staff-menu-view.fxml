<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="grupa.unu.restaurant.controller.StaffMenuController">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <HBox spacing="10">
                <Button text="Înapoi" onAction="#handleBackToStaffOrders"/>
                <Label text="Administrare Meniu" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </HBox>
            <TableView fx:id="menuTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Nume" prefWidth="200"/>
                    <TableColumn fx:id="priceColumn" text="Preț" prefWidth="100"/>
                    <TableColumn fx:id="availableColumn" text="Disponibil" prefWidth="100"/>
                    <TableColumn fx:id="actionColumn" text="Acțiune" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>
